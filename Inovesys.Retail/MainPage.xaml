<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Inovesys.Retail.MainPage"
             Title="Menu Principal">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Início"
                   FontAttributes="Bold"
                   FontSize="22"
                   HorizontalOptions="Center" />

            <Grid ColumnSpacing="20" RowSpacing="20" Padding="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Login -->
                <Border Grid.Row="0" Grid.Column="0"
            Stroke="LightGray"
            StrokeShape="RoundRectangle 10"
            Padding="10">
                    <VerticalStackLayout>
                        <Label Text="🔐" FontSize="32" HorizontalOptions="Center" />
                        <Button Text="Login"
                    Clicked="OnLoginClicked"
                    HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Border>

                <!-- Venda Consumidor -->
                <Border Grid.Row="0" Grid.Column="1"
            Stroke="LightGray"
            StrokeShape="RoundRectangle 10"
            Padding="10">
                    <VerticalStackLayout>
                        <Label Text="🛒" FontSize="32" HorizontalOptions="Center" />
                        <Button Text="Venda Consumidor"
                    Clicked="OnConsumerSaleClicked"
                    HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Border>

                <!-- Sincronizar Todas -->
                <Border Grid.Row="1" Grid.Column="0"
                Stroke="LightGray"
                    StrokeShape="RoundRectangle 10"
                    Padding="10">
                    <VerticalStackLayout>
                        <Label Text="🔁" FontSize="32" HorizontalOptions="Center" />
                        <Button Text="Sincronizar Todas"
                    Clicked="OnSyncAllClicked"
                    HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Border>

                <!-- Configurações -->
                <Border Grid.Row="1" Grid.Column="2"
                    Stroke="LightGray"
                    StrokeShape="RoundRectangle 10"
                    Padding="10">
                    <VerticalStackLayout>
                        <Label Text="⚙️" FontSize="32" HorizontalOptions="Center" />
                        <Button Text="Configurações"
                    Clicked="OnSettingsClicked"
                    HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Border>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
